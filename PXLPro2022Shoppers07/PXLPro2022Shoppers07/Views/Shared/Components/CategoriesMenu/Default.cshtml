@model IEnumerable<Category>
@{
    var category = ViewBag.SelectedCategory;
}



<ul class="list-group">
    @if (category == null)
    {
        <a asp-action="Products" class="list-group-item active">
            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
            All Categories
        </a>
    }
    else
    {
        <a asp-action="Products" class="list-group-item">
            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
            All Categories
        </a>
    }
    

    @foreach (var item in Model)
    {
        if (category != null)
        {
            if (item.CategoryName == category)
            {
                <a class="list-group-item active "
                   asp-action="Products" asp-controller="Product" asp-route-category="@item.CategoryName">
                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>

                    @item.CategoryName
                </a>
            }
            else
            {
                <a class="list-group-item"
                   asp-action="Products" asp-controller="Product" asp-route-category="@item.CategoryName">
                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>

                    @item.CategoryName
                </a>
            }
        }
        else
        {
            <a class="list-group-item"
               asp-action="Products" asp-controller="Product" asp-route-category="@item.CategoryName">
                <i class="fa fa-angle-double-right" aria-hidden="true"></i>

                @item.CategoryName
            </a>
        }
    }
</ul>

