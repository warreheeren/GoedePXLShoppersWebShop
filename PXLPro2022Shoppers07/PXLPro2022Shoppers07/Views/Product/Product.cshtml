@model PXLPro2022Shoppers07.Models.Product

<div class="container mt-5 mb-5">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-6 border-end">
                <div class="d-flex flex-column justify-content-center">
                    <div class="d-flex justify-content-center align-items-center border-light overflow-hidden w-100 m-2" style="height: 300px">
                        <img src="@Model.ProductImage[0].Base64String" width="350">
                    </div>
                    <div class="w-100">
                        <ul class="d-flex">
                            @foreach (var img in Model.ProductImage)
                            {
                                <li class="m-1"><img src="@img.Base64String" width="70" class="h-100"></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-3 right-side">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3>@Model.ProductName</h3> <span class="heart"><i class="bx bx-heart"></i></span>
                    </div>
                    <div class="mt-2 pr-3 content">
                        <p>Lorem ipsum dolor si amet</p>
                    </div>
                    <h3>@Model.Price.ToString("C")</h3>
                    <div class="d-flex flex-row align-items-center">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <div class="buttons d-flex flex-row mt-5">
                        <a class="btn btn-primary"
                           asp-controller="ShoppingCart"
                           asp-action="AddToShoppingCart"
                           asp-route-id="@Model.ProductId">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>