@model PXLPro2022Shoppers07.Models.Product
@{
    bool firstImageUsed = false;
    int imageCount = 0;
}

<div class="container mt-5 mb-5">
    <div class="card">
        <div class="row">
            <div class="col-md-6">
                <div style="position: relative">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner h-50">
                            @foreach (var img in Model.ProductImage)
                            {
                                if (firstImageUsed)
                                {
                                    <div class="carousel-item">
                                        <img class="w-100" src="@img.Base64String">
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item active">
                                        <img class="w-100" src="@img.Base64String">
                                    </div>
                                }
                                firstImageUsed = true;


                            }
                        </div>

                        <ul class="carousel-indicators">
                            @foreach (var img in Model.ProductImage)
                            {
                                if (imageCount != 0)
                                {
                                    <li class="m-2" width="100px" height="auto" style="cursor: pointer" data-target="#carouselExampleIndicators" data-slide-to="@imageCount">
                                        <img class="border" src="@img.Base64String" width="100" height="auto" />

                                    </li>
                                }
                                else
                                {
                                    <li class="m-2 active" width="100px" height="auto" style="cursor: pointer" data-target="#carouselExampleIndicators" data-slide-to="@imageCount">
                                        <img class="border" src="@img.Base64String" width="100" height="auto" />
                                    </li>
                                }
                                imageCount++;
                            }
                        </ul>
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="p-3 right-side">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3>@Model.ProductName</h3> <span class="heart"><i class="bx bx-heart"></i></span>
                    </div>
                    <div class="mt-2 pr-3 content">
                        <p>Lorem ipsum dolor si amet</p>
                    </div>
                    <h3>@Model.Price.ToString("C")</h3>
                    <div class="d-flex flex-row align-items-center">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <div class="buttons d-flex flex-row mt-5">
                        <a class="btn btn-primary"
                           asp-controller="ShoppingCart"
                           asp-action="AddToShoppingCart"
                           asp-route-id="@Model.ProductId">Add to cart</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style lang="scss">
    .carousel-indicators {
        position: relative !important;
    }

    .carousel-indicators li {
        width: 100px !important;
        height: 100px !important;
        text-indent: 0 !important;
        opacity: 1 !important;
    }
    .carousel-indicators li::after {

    }


    .active::after {
        top: -10px;
        left: 0;
        display: inline-block;
        width: 100%;
        height: 4px;
        content: "";
        background: orange;
    }

    .carousel-item::after {
        background: transparent !important;
    }

</style>
