        position: relative !important;
        margin-left: 0 !important;
        margin-right: 0 !important;
    }

    .carousel-indicators li {
        width: 100px !important;
        height: 100px !important;
        text-indent: 0 !important;
        opacity: 1 !important;
    }

    li.active::after {
        top: -10px;
        left: 0;
        display: inline-block;
        width: 100%;
        height: 4px;
        content: "";
        background: orange;
    }


    /*.nav-link::after {
